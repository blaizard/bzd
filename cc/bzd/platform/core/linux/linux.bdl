use "cc/bzd/platform/core.bdl"

namespace bzd.platform.linux;

// Core abstraction on Linux operating system.
component Core : bzd.platform.Core {
	
config:
	// Stack size for the current core.
	stackSize = StackSize(10000) [template];
	priority = Integer(0) [min(0) max(100)];
	name = Float(3.124) [min(0) max(100)];
	
}

component Executor : bzd.platform.Executor {
	
config:
	 ... = Core;
	
}


