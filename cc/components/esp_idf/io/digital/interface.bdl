use "interfaces/io.bdl"

namespace bzd.components.esp32.io;


enum DigitalMode
{
	input
,	output
,	ouputOpenDrain
,	inputOuputOpenDrain
,	inputOutput
}

component Digital : bzd.IO {
config:
	// Pin number associated with this IO.
	pin = Integer [min(0) max(255)];
	// The mode of the IO.
	mode = DigitalMode [mandatory];
	
interface:
	method init() [init];
	method shutdown() [shutdown];
	method run();
	io = const Boolean;
	
composition:
	this.run();
	
}


