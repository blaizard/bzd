use "cc/bzd/platform/interfaces/core.bdl"

namespace bzd.platform.esp32;


// Core abstraction on Linux operating system.
component Core : bzd.platform.Core {
interface:
	
config:
	// Stack size for the current core.
	stackSize = StackSize(16000);
	// The name of the core.
	name = String;
	// CPU to which this core should be pinned to.
	cpu = Integer [min(0) max(1)];
	// Priority of the task in percent (0 beeing the lowest, 100 the highest).
	priority = Integer [min(0) max(100)];
	
}
