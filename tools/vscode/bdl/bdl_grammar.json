{
    "patterns": [
        {
            "match": "(composition|interface|config):",
            "name": "storage.type.modifier.access.control"
        },
        {
            "match": "(struct|interface|component|composition)\\b",
            "name": "storage.type.class"
        },
        {
            "match": "namespace\\b",
            "name": "storage.type.namespace"
        },
        {
            "match": "method\\b",
            "name": "storage.type.function"
        },
        {
            "match": "enum\\b",
            "name": "storage.type.enum"
        },
        {
            "match": "use\\b",
            "name": "keyword.control"
        },
        {
            "match": "using\\b",
            "name": "keyword.control"
        },
        {
            "match": "extern\\b",
            "name": "keyword.control"
        },
        {
            "match": "const\\b",
            "name": "storage.modifier.const"
        },
        {
            "match": "(list|Any|connect|bind)\\b",
            "name": "support.type"
        },
        {
            "match": "/[^\\s]+/",
            "name": "string.regexp"
        },
        {
            "match": "{[\\S\\.]+}",
            "name": "entity.name.function.macro"
        },
        {
            "begin": "/\\*",
            "end": "\\*/",
            "name": "comment.block"
        },
        {
            "match": "(//).*$\\n?",
            "name": "comment.line"
        },
        {
            "begin": "\"",
            "end": "\"",
            "name": "string.quoted.double"
        }
    ],
    "scopeName": "source.bdl"
}