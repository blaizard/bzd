# Tweak the output
build --show_progress_rate_limit=60
build --noshow_loading_progress
build --show_timestamps

# Allow external dependencies to be retried, but decrease the connect time.
common --connect_timeout_secs=10
common --experimental_repository_downloader_retries=20
common --http_timeout_scaling=2.0

# Reduce memory
common --notrack_incremental_state
common --nokeep_state_after_build
