
namespace example;


// Emit integer continuously.
component Emitter {
interface:
	method generate();
	send = Integer;
	
}

// Poll and receive data.
component Poller {
interface:
	method poll();
	receive = const Integer;
	
}

composition {
	emitter = Emitter() [executor(hpc.executor)];
	emitter.generate();
	poller = Poller() [executor(esp32.executor)];
	poller.poll();
	connect(emitter.send, poller.receive);
	
}


