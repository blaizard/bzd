
namespace example;


component Hello {
interface:
	method run();
	send = Float;
	
composition:
	this.run();
	
}

component World {
interface:
	receive = const Float;
	
}

composition {
	hello = Hello() [executor(second.executor)];
	hello.run();
	world = World() [executor(executor)];
	/*
	 * recorder = Recorder();
	 * Regexpr choices:
	 * glob(include=..., exclude=...) <- cannot easily express lists.
	 * include(..., ..., ...).exclude(..., ...) <- ugly
	 * hello.* <- type regexpr (cannot express lists nor exclusions)
	 * hello.* + yes.* - hello.this
	 * +hello.world* +world* -world.this <- the nicest I think, thanks chatGPT!
	 * /hello.world*.help/ + /world.*.hello/ - /world.this/ <- will use this instead.
	 * Connect all signals to this recorder
	 * connect(include(*).exclude(""), recorder);
	 */
	connect(hello.send, world.receive);
	
}
