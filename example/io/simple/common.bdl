
namespace example;


// Emit integer continuously.
component Emitter {
interface:
	method generate();
	send = Integer;
	
config:
	out = {out};
	timer = {timer};
	
composition:
	this.generate();
	
}

// Poll and receive data.
component Poller {
interface:
	method poll();
	receive = const Integer;
	
config:
	out = {out};
	timer = {timer};
	id = const Integer;
	
}


