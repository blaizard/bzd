{
    "/register": {
        "post": {
            "authentication": true,
            "documentation": "Register a new user.",
            "request": {
                "type": "json",
                "validation": {
                    "password": "",
                    "uid": "mandatory"
                }
            },
            "response": {
                "type": "json"
            }
        }
    },
    "/sso": {
        "get": {
            "authentication": true,
            "documentation": "Get SSO for a specific application.",
            "request": {
                "type": "query",
                "validation": {
                    "application": "mandatory"
                }
            },
            "response": {
                "type": "json",
                "validation": {
                    "redirect": "mandatory",
                    "token": "mandatory"
                }
            }
        }
    }
}