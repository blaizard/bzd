{
    "/reset/password": {
        "post": {
            "documentation": "Reset the user's password.",
            "request": {
                "type": "json",
                "validation": {
                    "password": "mandatory",
                    "token": "mandatory",
                    "uid": "mandatory"
                }
            }
        }
    },
    "/reset/request": {
        "post": {
            "documentation": "Perform a request for reseting a password.",
            "request": {
                "type": "json",
                "validation": {
                    "uid": "mandatory"
                }
            }
        }
    },
    "/sso": {
        "get": {
            "authentication": true,
            "documentation": "Get SSO for a specific application.",
            "request": {
                "type": "query",
                "validation": {
                    "application": "mandatory"
                }
            },
            "response": {
                "type": "json",
                "validation": {
                    "redirect": "mandatory",
                    "token": "mandatory"
                }
            }
        }
    }
}