{
    "/admin/user": {
        "delete": {
            "authentication": "users:w",
            "documentation": "Delete a specific user",
            "request": {
                "type": "json",
                "validation": {
                    "uid": "mandatory"
                }
            }
        },
        "post": {
            "authentication": "users:w",
            "documentation": "Create a new user",
            "request": {
                "type": "json",
                "validation": {
                    "email": "mandatory"
                }
            }
        },
        "put": {
            "authentication": "users:w",
            "documentation": "Update user information",
            "request": {
                "type": "json",
                "validation": {
                    "roles": "",
                    "subscriptions": "",
                    "uid": "mandatory"
                }
            }
        }
    },
    "/admin/users": {
        "get": {
            "authentication": "users:r",
            "documentation": "List all users",
            "request": {
                "type": "query",
                "validation": {
                    "max": "mandatory",
                    "page": "mandatory"
                }
            },
            "response": {
                "type": "json"
            }
        }
    },
    "/user": {
        "delete": {
            "authentication": "self-basic:w",
            "documentation": "Delete current user account",
            "request": {
                "type": "json",
                "validation": {
                    "password": "mandatory"
                }
            }
        },
        "get": {
            "authentication": "self-basic:r",
            "documentation": "Get current user information",
            "response": {
                "type": "json"
            }
        },
        "put": {
            "authentication": "self-basic:w",
            "documentation": "Update current user information",
            "request": {
                "type": "json",
                "validation": {
                    "oldpassword": "",
                    "password": "",
                    "tokens": ""
                }
            },
            "response": {
                "type": "json"
            }
        }
    }
}