{
    "/admin/user": {
        "delete": {
            "authentication": "admin-users:w",
            "documentation": "Delete a specific user",
            "request": {
                "type": "json",
                "validation": {
                    "uid": "mandatory"
                }
            }
        },
        "post": {
            "authentication": "admin-users:w",
            "documentation": "Create a new user",
            "request": {
                "type": "json",
                "validation": {
                    "email": "mandatory"
                }
            }
        },
        "put": {
            "authentication": "admin-users:w",
            "documentation": "Update user information",
            "request": {
                "type": "json",
                "validation": {
                    "roles": "",
                    "subscriptions": "",
                    "uid": "mandatory"
                }
            }
        }
    },
    "/admin/users": {
        "get": {
            "authentication": "admin-users:r",
            "documentation": "List all users",
            "request": {
                "type": "query",
                "validation": {
                    "max": "mandatory",
                    "page": "mandatory"
                }
            },
            "response": {
                "type": "json"
            }
        }
    },
    "/user": {
        "delete": {
            "authentication": "self-basic:w",
            "documentation": "Delete current user account",
            "request": {
                "type": "json",
                "validation": {
                    "password": "mandatory"
                }
            }
        },
        "get": {
            "authentication": "self-basic:r",
            "documentation": "Get current user information",
            "response": {
                "scopes": {
                    "creation": "self-basic:r",
                    "email": "self-basic:r",
                    "last_login": "self-basic:r",
                    "roles": "self-roles:r",
                    "scopes": "self-roles:r",
                    "subscriptions": "self-subscriptions:r",
                    "tokens": "self-tokens:r"
                },
                "type": "json"
            }
        },
        "put": {
            "authentication": "self-basic:w",
            "documentation": "Update current user information",
            "request": {
                "type": "json",
                "validation": {
                    "oldpassword": "",
                    "password": "",
                    "tokens": ""
                }
            },
            "response": {
                "type": "json"
            }
        }
    },
    "scopes": {
        "admin-users:r": "Read anything related to users.",
        "admin-users:w": "Change anything related to users, including creating/deleting users.",
        "self-basic:r": "Read basic information about the current user.",
        "self-basic:w": "Change basic information about the current user.",
        "self-roles:r": "Read the current user roles.",
        "self-roles:w": "Update the current user roles.",
        "self-subscriptions:r": "Read the current user subscriptions.",
        "self-subscriptions:w": "Change the current user subscriptions.",
        "self-tokens:r": "Read the current user tokens.",
        "self-tokens:w": "Change the current user tokens."
    }
}