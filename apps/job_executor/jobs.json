{
    "bash": {
        "args": [],
        "command": "/bin/bash",
        "inputs": []
    },
    "ebook": {
        "args": [
            [
                "--key",
                "{key}"
            ],
            [
                "{action}"
            ],
            "{ebook}"
        ],
        "docker": "local/image:latest",
        "inputs": [
            {
                "caption": "Action",
                "list": [
                    "pdf",
                    "cover"
                ],
                "name": "action",
                "type": "Dropdown",
                "validation": "mandatory"
            },
            {
                "caption": "Ebook",
                "max": 1,
                "name": "ebook",
                "type": "File",
                "validation": "mandatory"
            },
            {
                "caption": "Key file",
                "max": 1,
                "name": "key",
                "type": "File"
            }
        ]
    },
    "sleep": {
        "args": [
            "{time}"
        ],
        "docker": "local/image_sleep:latest",
        "inputs": [
            {
                "caption": "Time (in seconds)",
                "name": "time",
                "type": "Input",
                "validation": "mandatory"
            }
        ]
    }
}