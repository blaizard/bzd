{
    "bash": {
        "args": [],
        "command": "/bin/bash",
        "inputs": [],
        "type": "shell"
    },
    "blaizard/build:x86_64": {
        "args": [],
        "image": "docker.io/blaizard/build:x86_64",
        "inputs": [],
        "type": "docker"
    },
    "ebook": {
        "args": [
            [
                "--key",
                "{key}"
            ],
            [
                "--max-dpi",
                "{dpi}"
            ],
            [
                "{action}"
            ],
            "{ebook}"
        ],
        "default": {
            "action": "pdf",
            "dpi": "200"
        },
        "image": "local/image:latest",
        "inputs": [
            {
                "caption": "Action",
                "list": [
                    "pdf",
                    "cover"
                ],
                "name": "action",
                "type": "Dropdown",
                "validation": "mandatory"
            },
            {
                "caption": "Ebook",
                "max": 1,
                "name": "ebook",
                "type": "File",
                "validation": "mandatory"
            },
            {
                "caption": "Key file",
                "max": 1,
                "name": "key",
                "type": "File"
            },
            {
                "caption": "Max DPI",
                "name": "dpi",
                "type": "Input"
            }
        ],
        "type": "docker"
    },
    "sleep": {
        "args": [
            "{time}"
        ],
        "image": "local/image_sleep:latest",
        "inputs": [
            {
                "caption": "Time (in seconds)",
                "name": "time",
                "type": "Input",
                "validation": "mandatory"
            }
        ],
        "type": "docker"
    },
    "ubuntu": {
        "args": [
            "{commands}"
        ],
        "image": "docker.io/ubuntu:latest",
        "inputs": [
            {
                "caption": "Commands",
                "name": "commands",
                "type": "Textarea",
                "validation": "mandatory"
            }
        ],
        "type": "docker"
    }
}