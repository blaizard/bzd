{
    "rest": {
        "/files/{id}": {
            "post": {
                "documentation": "Get the file/directory list from a specific path.",
                "request": {
                    "type": "json",
                    "validation": {
                        "id": "",
                        "paging": "",
                        "path": "mandatory"
                    }
                },
                "response": {
                    "type": "json",
                    "validation": {
                        "data": "mandatory",
                        "next": "mandatory"
                    }
                }
            }
        },
        "/job/send": {
            "post": {
                "documentation": "Send a job to be processed.",
                "request": {
                    "type": "json",
                    "validation": {
                        "data": "mandatory",
                        "id": "mandatory"
                    }
                },
                "response": {
                    "type": "json",
                    "validation": {
                        "job": "mandatory"
                    }
                }
            }
        },
        "/job/{id}": {
            "delete": {
                "documentation": "Kill a running job."
            }
        },
        "/jobs": {
            "get": {
                "documentation": "Get the list of jobs.",
                "response": {
                    "type": "json",
                    "validation": {
                        "jobs": "mandatory",
                        "timestamp": "mandatory"
                    }
                }
            }
        }
    },
    "websocket": {
        "/job/{id}": {
            "documentation": "Get information about a given job."
        }
    }
}