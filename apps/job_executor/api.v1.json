{
    "rest": {
        "/job/send": {
            "post": {
                "documentation": "Send a job to be processed.",
                "request": {
                    "type": "json",
                    "validation": {
                        "data": "mandatory",
                        "id": "mandatory"
                    }
                },
                "response": {
                    "type": "json",
                    "validation": {
                        "job": "mandatory"
                    }
                }
            }
        },
        "/jobs": {
            "get": {
                "documentation": "Get the list of jobs.",
                "response": {
                    "type": "json",
                    "validation": {
                        "jobs": "mandatory",
                        "timestamp": "mandatory"
                    }
                }
            }
        }
    },
    "websocket": {
        "/job/{id}": {
            "documentation": "Get information about a given job."
        }
    }
}