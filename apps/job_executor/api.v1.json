{
    "rest": {
        "/job/send": {
            "post": {
                "documentation": "Send a job to be processed.",
                "request": {
                    "type": "json",
                    "validation": {
                        "data": "mandatory",
                        "id": "mandatory"
                    }
                },
                "response": {
                    "type": "json",
                    "validation": {
                        "job": "mandatory"
                    }
                }
            }
        }
    },
    "websocket": {
        "/socket/job/{id}": {
            "documentation": "Get information about a given job."
        }
    }
}