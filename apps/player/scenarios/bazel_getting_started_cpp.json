{
    "flow": [
        {
            "action": "wait",
            "args": [
                "5"
            ]
        },
        {
            "action": "speech",
            "args": [
                "First we create a C++ source file"
            ]
        },
        {
            "action": "file.create",
            "args": [
                "main.cc"
            ]
        },
        {
            "action": "speech",
            "args": [
                "Then we fill it with some content, let's print \"hello world\" for example"
            ]
        },
        {
            "action": "file.write",
            "args": [
                "main.cc",
                "#include <iostream>\n\nint main()\n{\n\tstd::cout << \"Hello World!\" << std::endl;\n\treturn 0;\n}\n"
            ]
        },
        {
            "action": "wait",
            "args": [
                "1"
            ]
        },
        {
            "action": "file.write",
            "args": [
                "BUILD",
                "cc_binary(\n\tname = \"main\",\n\tsrcs = [\"main.cc\"],\n)\n"
            ]
        },
        {
            "action": "wait",
            "args": [
                "1"
            ]
        },
        {
            "action": "file.create",
            "args": [
                "WORKSPACE"
            ]
        },
        {
            "action": "wait",
            "args": [
                "1"
            ]
        },
        {
            "action": "file.select",
            "args": [
                "main.cc"
            ]
        },
        {
            "action": "wait",
            "args": [
                "1"
            ]
        },
        {
            "action": "exec",
            "args": [
                "bazel build //... --color=yes --curses=yes",
                "bazel build //..."
            ]
        }
    ],
    "name": "bazel-getting-started-c++"
