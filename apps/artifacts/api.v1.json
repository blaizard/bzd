{
    "/config": {
        "get": {
            "documentation": "Get the current configuration of a volume.",
            "request": {
                "type": "query",
                "validation": {
                    "volume": "mandatory"
                }
            },
            "response": {
                "type": "json"
            }
        }
    },
    "/list": {
        "post": {
            "documentation": "Get the file/directory list from a specific path.",
            "request": {
                "type": "json",
                "validation": {
                    "paging": "",
                    "path": "mandatory"
                }
            },
            "response": {
                "type": "json",
                "validation": {
                    "data": "mandatory",
                    "next": "mandatory"
                }
            }
        }
    }
}