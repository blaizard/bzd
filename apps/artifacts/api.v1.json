{
    "/config": {
        "delete": {
            "authentication": true,
            "documentation": "Delete a volume and its configuration.",
            "request": {
                "type": "json",
                "validation": {
                    "volume": "mandatory"
                }
            }
        },
        "get": {
            "documentation": "Get the current configuration of a volume.",
            "request": {
                "type": "query",
                "validation": {
                    "volume": "mandatory"
                }
            },
            "response": {
                "type": "json"
            }
        },
        "post": {
            "authentication": true,
            "documentation": "Set the configuration of a volume.",
            "request": {
                "type": "json",
                "validation": {
                    "config": "mandatory",
                    "volume": "mandatory"
                }
            }
        }
    },
    "/endpoint/{path:*}": {
        "get": {
            "documentation": "Retreive data of a specific endpoint.",
            "response": {
                "type": "json"
            }
        },
        "post": {
            "documentation": "Post data of a specific endpoint.",
            "request": {
                "type": "raw"
            },
            "response": {
                "type": "raw"
            }
        }
    },
    "/file": {
        "get": {
            "documentation": "Retreive the content of a specific file.",
            "request": {
                "type": "query",
                "validation": {
                    "path": "mandatory"
                }
            },
            "response": {
                "type": "file"
            }
        }
    },
    "/list": {
        "post": {
            "documentation": "Get the file/directory list from a specific path.",
            "request": {
                "type": "json",
                "validation": {
                    "paging": "",
                    "path": "mandatory"
                }
            },
            "response": {
                "type": "json",
                "validation": {
                    "data": "mandatory",
                    "next": "mandatory"
                }
            }
        }
    },
    "/services": {
        "get": {
            "documentation": "Get the list of active services.",
            "response": {
                "type": "json"
            }
        }
    }
}